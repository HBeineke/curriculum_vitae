          %h4.m-0= skill_group.title
          .f-row.f-ccenter.text-5.ml-7
            .badge{class: Skill.accent_color_class_for(skill_type_group.type), "data-toggle" => "tooltip", "data-html" =>"true", "data-container"=>"body", title: skill_group.experience_groups_in_words}= skill_group.time_range.reduced_period_in_words
