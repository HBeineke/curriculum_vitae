.filter.js-skills-filter{style: "display: none;"}
  %ul.list-unstyled.d-none.d-lg-block
    %li{"data-target-class" => "js-software"}
      - disable_tooltip_message = t('general.filter.disable', obj: t('enums.skill.type.software'))
      - enable_tooltip_message = t('general.filter.enable', obj: t('enums.skill.type.software'))
      = content_tag(:span, class: 'filter-item js-filter-item fa-stack fa-lg', data: { toggle: 'tooltip', placement: 'right', disable_tooltip_message: disable_tooltip_message, enable_tooltip_message: enable_tooltip_message  }, title: disable_tooltip_message) do
        = icon 'fas', 'circle', class: "fa-stack-2x text-teal"
        = icon 'fas', 'compact-disc', class: 'fa-stack-1x fa-inverse'

