@import "bootstrap"
@import "colors"
@import "customization/bootstrap"
@import "components/timeline"
@import "font-awesome-sprockets"
@import "font-awesome"

.slogan
  font-size: 12px

#header
  background-color: rgba(white, 1)

#introduction
  background-color: lighten($pastel_green, 15%)
  margin-top: 72px

  .card
    border: 0
    border-radius: 0
    cursor: pointer
    background-color: lighten($pastel_green, 15%)
    &.active
      img
        opacity: 1 !important
      .card-title
        opacity: 1 !important
      .card-text
        opacity: 1 !important

  img
    width: 100%
    opacity: 0.4

  .card-title
    opacity: 0
    
  .card-text
    position: absolute
    bottom: 15px
    opacity: 0
